# ===========================================
# Database Configuration
# ===========================================
# Copy this file to .env and update values

# Database Host (default: localhost for local development)
DB_HOST=localhost

# Database Name
DB_NAME=enviroapps_student_tracker

# Database Username
DB_USER=root

# Database Password (leave empty for local XAMPP)
DB_PASS=

# Database Port (optional - leave empty for default 3306)
# Some shared hosts don't require this
DB_PORT=

# ===========================================
# Application Environment
# ===========================================
# Set to 'production' on live server to hide detailed errors
# Leave empty or set to 'development' for local debugging
APP_ENV=development
